<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/chart_donut_variant"
        app:tint="#FFFFFF"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/txtFalla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imagen"
        android:layout_alignTop="@id/imagen"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/txtFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtFalla"
        android:layout_toEndOf="@id/imagen"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/txtEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtFecha"
        android:layout_toEndOf="@id/imagen"
        android:textColor="#DAA400"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/txtUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEstado"
        android:layout_toEndOf="@id/imagen"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp" />

    <View
        android:id="@+id/separador"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/txtUbicacion"
        android:background="#808080"
        android:layout_marginTop="8dp" />

</RelativeLayout>